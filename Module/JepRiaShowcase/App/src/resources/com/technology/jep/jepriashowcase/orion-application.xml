<?xml version="1.0"?>
<orion-application  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://xmlns.oracle.com/oracleas/schema/orion-application-10_0.xsd"  deployment-version="10.1.3.1.0" component-classification="external"
  schema-major-version="10" schema-minor-version="0" >
	<ejb-module remote="false" path="lib/jepriashowcase-ejb.jar" /> 
	<web-module id="jepriashowcase" path="jepriashowcase.war" />
	<library path="lib" />
	<library path="jepriashowcase\WEB-INF\lib" />
	<log>
		<file path="application.log" />
	</log>
  <jazn provider="XML">
		<property name="role.mapping.dynamic" value="true"/>
		<property name="custom.loginmodule.provider" value="true"/>
		<jazn-web-app auth-method="CUSTOM_AUTH" />
	</jazn>
  <jazn-loginconfig>
    <application>
       <name>jepriashowcase</name>
          <login-modules>
             <login-module>
                <class>com.technology.jep.jepcommon.security.JepLoginModule</class>
                <control-flag>required</control-flag>
             </login-module>
          </login-modules>
    </application>
  </jazn-loginconfig>	
</orion-application>
